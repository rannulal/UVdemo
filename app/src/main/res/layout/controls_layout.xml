<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/black"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_chevron_left_white_24dp"
        android:tint="@android:color/white"
        android:id="@+id/leftIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:textColor="@android:color/darker_gray"
        android:text="1 of 1"
        android:textSize="10sp"
        android:id="@+id/pageIndicatorTV"
        app:layout_constraintBottom_toTopOf="@+id/descTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/leftIV"
        app:layout_constraintRight_toLeftOf="@+id/rightIV"
        android:layout_margin="25dp"
        tools:text="This is a description of this thing called blessed and just testing"
        android:id="@+id/descTV"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <ImageView
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/descTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/close_circle_outline"
        android:tint="@android:color/white"
        android:id="@+id/closeIV"
        android:layout_marginTop="10dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <ImageView
        android:padding="5dp"
        android:id="@+id/rightIV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_chevron_right_white_24dp"
        android:tint="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>